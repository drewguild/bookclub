<div class="background-white padding-2em center-content">
  <h1 class="">Bookclub</h1>
  <h2 class="">Welcome</h2>

  <%= form_with(url: "/sessions", method: "post", class: "pure-form-stacked") do %>
    <%= label_tag(:username, "Username") %>
    <%= text_field_tag(:username) %>
    <%= label_tag(:password, "Password: ") %>
    <%= password_field_tag(:password) %>
    <%= submit_tag("Login") %>
  <% end %>
</div>