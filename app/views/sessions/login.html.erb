<h1>Login</h1>

<%= form_with(url: "/sessions", method: "post", class: "pure-form-stacked") do %>
    <%= label_tag(:username, "Username") %>
    <%= text_field_tag(:username) %>
    <%= label_tag(:password, "Password: ") %>
    <%= password_field_tag(:password) %>
    <%= submit_tag("Login") %>
<% end %>