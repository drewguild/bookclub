<div class="background-white padding-2em center-content">
  <h1 class="">Bookclub</h1>
  <h2 class="">Welcome</h2>

  <%= form_with(url: "/sessions", method: "post", class: "pure-form-stacked") do %>
    <%= text_field_tag(:username, "", { placeholder: "Username" }) %>
    <%= password_field_tag(:password, "", { placeholder: "Password" }) %>
    <%= submit_tag("Login") %>
  <% end %>
</div>